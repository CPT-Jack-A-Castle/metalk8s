include:
  - metalk8s.addons.prometheus-operator.deployed.namespace

Deploy ConfigMap for Loki dashboard:
  metalk8s_kubernetes.object_present:
    - manifest:
        apiVersion: v1
        kind: ConfigMap
        metadata:
          name: loki-grafana-dashboard
          namespace: metalk8s-monitoring
          labels:
            grafana_dashboard: "1"
            app.kubernetes.io/managed-by: metalk8s
            app.kubernetes.io/part-of: metalk8s
            heritage: metalk8s
        data:
          loki-dashboard.json: |-
{%- raw %}
@@LokiDashboard
{%- endraw %}
